{
  "name": "hero",
  "label": "Hero Section",
  "display": "block",
  "sub_fields": [
    {
      "key": "field_hero_title",
      "label": "Title",
      "name": "title",
      "type": "text",
      "required": true
    },
    {
      "key": "field_hero_subtitle",
      "label": "Subtitle",
      "name": "subtitle",
      "type": "text"
    },
    {
      "key": "field_hero_description",
      "label": "Description",
      "name": "description",
      "type": "textarea"
    },
    {
      "key": "field_hero_media_type",
      "label": "Media Type",
      "name": "media_type",
      "type": "radio",
      "choices": {
        "image": "Image",
        "video": "YouTube Video"
      },
      "default_value": "image",
      "layout": "horizontal"
    },
    {
      "key": "field_hero_image",
      "label": "Image",
      "name": "image",
      "type": "image",
      "return_format": "id",
      "conditional_logic": [
        [
          {
            "field": "field_hero_media_type",
            "operator": "==",
            "value": "image"
          }
        ]
      ]
    },
    {
      "key": "field_hero_youtube_url",
      "label": "YouTube Video URL",
      "name": "youtube_url",
      "type": "url",
      "instructions": "Enter the full YouTube URL (e.g., https://www.youtube.com/watch?v=dQw4w9WgXcQ)",
      "conditional_logic": [
        [
          {
            "field": "field_hero_media_type",
            "operator": "==",
            "value": "video"
          }
        ]
      ]
    },
    {
      "key": "field_hero_cta_text",
      "label": "CTA Button Text",
      "name": "cta_text",
      "type": "text"
    },
    {
      "key": "field_hero_cta_link",
      "label": "CTA Button Link",
      "name": "cta_link",
      "type": "url"
    },
    {
      "key": "field_hero_bg_color",
      "label": "Background Color",
      "name": "background_color",
      "type": "color_picker",
      "default_value": "#ffffff"
    }
  ]
}
